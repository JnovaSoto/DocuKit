generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:../db/database.sqlite"
}

model User {
  id           Int       @id @default(autoincrement())
  username     String    @unique(map: "sqlite_autoindex_users_1")
  email        String    @unique(map: "sqlite_autoindex_users_2")
  password     String?
  googleId     String?   @unique(map: "sqlite_autoindex_users_3")
  admin        Int?      @default(0)
  photo        String?   @default("/uploads/users/cat_default.webp")
  favorites    String?   @default("[]")
  favoritesCss String?   @default("[]")
  createdAt    DateTime? @default(now())
  updatedAt    DateTime? @default(now()) @updatedAt

  @@map("users")
}

model Tag {
  id         Int         @id @default(autoincrement())
  tagName    String      @unique(map: "sqlite_autoindex_tags_1")
  usability  String?
  content    String?
  createdAt  DateTime?   @default(now())
  updatedAt  DateTime?   @default(now()) @updatedAt
  attributes Attribute[]

  @@map("tags")
}

model Attribute {
  id        Int       @id @default(autoincrement())
  attribute String
  info      String?
  tagId     Int
  createdAt DateTime? @default(now())
  updatedAt DateTime? @default(now()) @updatedAt
  tag       Tag       @relation(fields: [tagId], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@map("attributes")
}

model AttributeMetadata {
  id                 Int       @id @default(autoincrement())
  attributeName      String    @unique(map: "sqlite_autoindex_attribute_metadata_1")
  generalDescription String
  createdAt          DateTime? @default(now())
  updatedAt          DateTime? @default(now()) @updatedAt

  @@map("attribute_metadata")
}

model Property {
  id                 Int                 @id @default(autoincrement())
  propertyName       String              @unique(map: "sqlite_autoindex_properties_1")
  usability          String?
  content            String?
  createdAt          DateTime?           @default(now())
  updatedAt          DateTime?           @default(now()) @updatedAt
  propertyAttributes PropertyAttribute[]

  @@map("properties")
}

model PropertyAttribute {
  id         Int       @id @default(autoincrement())
  attribute  String
  info       String?
  propertyId Int
  createdAt  DateTime? @default(now())
  updatedAt  DateTime? @default(now()) @updatedAt
  property   Property  @relation(fields: [propertyId], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@map("property_attributes")
}
